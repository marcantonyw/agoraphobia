---
const { content, toc } = Astro.props;
import StickyToc from '../components/StickyToc.astro';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Agoraphobia Recovery</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        display: flex;
      }
      aside {
        width: 250px;
        padding: 1rem;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
        border-right: 1px solid #eee;
      }
      main {
        padding: 2rem;
        max-width: 700px;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <aside>
      <nav id="toc">
        <StickyToc headings={toc} />
      </nav>
    </aside>
    <main>
      {content}
    </main>
  </body>
</html>